<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="FieldLikeButton" TargetType="Button">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="14,12,10,12"/>
        <Setter Property="Foreground" Value="#224"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>
    <Style x:Key="DefRoot" TargetType="Window">
        <Setter Property="Background" Value="#fcfdfF"/>
        <Setter Property="Foreground" Value="#444"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>
    <Style x:Key="TextBoxMayErr" TargetType="TextBox">
        <Style.Triggers>
            <Trigger Property="Validation.HasError" Value="True">
                <Setter Property="Background" Value="#FFEEEE"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>